{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@components/*": ["./components/*"],
      "@generated/*": ["./generated/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "twin.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components/base/Navbar/subcomponents/ActiveLink.jsx"
  ],
  "exclude": ["node_modules"]
}
